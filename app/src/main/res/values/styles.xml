<resources>

    <style name="Widget.Theme.RecycleHelper.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.RecycleHelper.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Default TextView and Button font -->
        <item name="android:fontFamily">@font/jua_regular</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>