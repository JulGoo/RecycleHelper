<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".recycleGuide.RecycleGuideActivity">

    <ImageButton
        android:id="@+id/black"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.04"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/black"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

    <ImageButton
        android:id="@+id/btn_paper_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.3"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/black"
        app:srcCompat="@drawable/btn_paper_guide"
        android:scaleType="fitCenter"
        android:contentDescription="종이, 종이팩"
        android:adjustViewBounds="true" />

    <ImageButton
        android:id="@+id/btn_can_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.3"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/black"
        app:srcCompat="@drawable/btn_can_guide"
        android:scaleType="fitCenter"
        android:contentDescription="금속 캔, 고철"
        android:adjustViewBounds="true" />

    <ImageButton
        android:id="@+id/btn_glass_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.3"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_paper_guide"
        app:srcCompat="@drawable/btn_glass_guide"
        android:scaleType="fitCenter"
        android:contentDescription="유리병류"
        android:adjustViewBounds="true" />

    <ImageButton
        android:id="@+id/btn_plastic_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.3"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_can_guide"
        app:srcCompat="@drawable/btn_plastic_guide"
        android:scaleType="fitCenter"
        android:contentDescription="플라스틱 용기류"
        android:adjustViewBounds="true" />

    <ImageButton
        android:id="@+id/btn_vinyl_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.3"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_glass_guide"
        app:srcCompat="@drawable/btn_vinyl_guide"
        android:scaleType="fitCenter"
        android:contentDescription="비닐류"
        android:adjustViewBounds="true" />

    <ImageButton
        android:id="@+id/btn_styrofoam_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.3"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_plastic_guide"
        app:srcCompat="@drawable/btn_styrofoam_guide"
        android:scaleType="fitCenter"
        android:contentDescription="스티로폼"
        android:adjustViewBounds="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
